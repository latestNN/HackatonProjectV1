        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#3b82f6",
                        "background-light": "#f6f8f7",
                        "background-dark": "#111827",
                        "surface-dark": "#1f2937",
                        "border-dark": "#374151",
                        "text-secondary": "#9ca3af",
