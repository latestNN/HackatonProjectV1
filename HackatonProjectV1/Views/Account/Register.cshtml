@model HackatonProjectV1.ViewModel.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UniForum - Kayıt Ol</title>
    <link rel="stylesheet" href="~/css/LoginPage/sign-up.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <div class="main-container">
        <div class="left-section">
            <div class="logo">
                <i class="fa-solid fa-graduation-cap logo-icon"></i>
                <span>UniForum</span>
            </div>

            <div class="text-slider">
                <div class="text-slide active">
                    <h1>Aramıza<br>Katıl</h1>
                    <p class="description">Binlerce öğrenci arasına katılarak notlarını paylaş, sosyalleş ve kariyerini şekillendir.</p>
                </div>
                <div class="text-slide">
                    <h1>Deneyimlerini<br>Paylaş</h1>
                    <p class="description">Kampüs hayatındaki tecrübelerini aktar, diğer öğrencilere yol göster.</p>
                </div>
                <div class="text-slide">
                    <h1>Etkinlikleri<br>Kaçırma</h1>
                    <p class="description">Çevrendeki en güncel üniversite etkinliklerinden anında haberdar ol.</p>
                </div>
            </div>
        </div>

        <div class="right-section">
            <div class="login-box">
                <h2>Hesap Oluştur</h2>

                <form asp-action="Register" method="post" id="signup-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="input-group">
                            <label for="fullname">İsim </label>
                            <div class="input-field">
                                <i class="fa-regular fa-id-card input-icon"></i>
                                <input asp-for="FirstName" type="text" id="fullname" placeholder="Ad Soyad" >
                            </div>
                        </div>
                        <div class="input-group">
                            <label for="fullname"> Soyisim</label>
                            <div class="input-field">
                                <i class="fa-regular fa-id-card input-icon"></i>
                                <input asp-for="LastName" type="text" id="fullname" placeholder="Ad Soyad" >
                            </div>
                        </div>
                        <div class="input-group">
                            <label for="fullname"> File</label>
                            <div class="input-field">
                                <i class="fa-regular fa-id-card input-icon"></i>
                                <input asp-for="StudentDocumentPath" type="text" id="fullname" placeholder="Ad Soyad" >
                            </div>
                        </div>
                        <div class="input-group">
                            <label for="tcno">TC Kimlik No</label>
                            <div class="input-field">
                                <i class="fa-solid fa-fingerprint input-icon"></i>
                                <input asp-for="TcNo" type="text" id="tcno" placeholder="11 haneli TC no" maxlength="11" pattern="\d{11}" >
                            </div>
                        </div>
                    </div>

                    <div class="input-group">
                        <label for="email">Email Adresi</label>
                        <div class="input-field">
                            <i class="fa-regular fa-user input-icon"></i>
                            <input asp-for="Email" type="email" id="email" placeholder="Email adresini gir" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="input-group">
                            <label for="password">Şifre</label>
                            <div class="input-field">
                                <i class="fa-solid fa-lock input-icon"></i>
                                <input asp-for="Password" type="password" id="password" placeholder="Şifre" required>
                                <i class="fa-regular fa-eye toggle-password" id="togglePassword"></i>
                            </div>
                        </div>
                        <div class="input-group">
                            <label for="password-confirm">Şifre Onayla</label>
                            <div class="input-field">
                                <i class="fa-solid fa-lock input-icon"></i>
                                <input asp-for="ConfirmPassword" type="password" id="password-confirm" placeholder="Tekrar" required>
                                <i class="fa-regular fa-eye toggle-password" id="togglePasswordConfirm"></i>
                            </div>
                        </div>
                    </div>

                    <div class="input-group file-upload-group">
                        <label for="student-doc">Öğrenci Belgesi (PDF)</label>
                        <div class="file-upload-wrapper">
                            <input type="file" id="student-doc" accept=".pdf" >
                            <div class="file-upload-display">
                                <i class="fa-solid fa-cloud-arrow-up"></i>
                                <span id="file-name">Dosya seçilmedi</span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Kayıt Ol</button>

                    <p class="signup-link">
                        Zaten hesabın var mı? <a href="login.html">Giriş Yap</a>
                    </p>
                </form>
            </div>
        </div>
    </div>

    <script src="js/sign-up.js"></script>
</body>
</html>
