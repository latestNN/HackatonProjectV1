            <input type="checkbox" id="tag-soru" name="tags" value="soru-cevap"><label for="tag-soru" class="tag-chip">Soru - Cevap</label>
            <input type="checkbox" id="tag-proje" name="tags" value="proje"><label for="tag-proje" class="tag-chip">Proje</label>
            <input type="checkbox" id="tag-notlar" name="tags" value="ders-notlari"><label for="tag-notlar" class="tag-chip">Ders Notları</label>
            <input type="checkbox" id="tag-kaynak" name="tags" value="kaynak"><label for="tag-kaynak" class="tag-chip">Kaynak</label>
            <input type="checkbox" id="tag-duyuru" name="tags" value="duyuru"><label for="tag-duyuru" class="tag-chip">Duyuru</label>
            <input type="checkbox" id="tag-sinav" name="tags" value="sinav"><label for="tag-sinav" class="tag-chip">Sınav</label> *@
        </div>
        <button type="submit" class="filter-btn">Filtrele</button>
    </form>
</div>